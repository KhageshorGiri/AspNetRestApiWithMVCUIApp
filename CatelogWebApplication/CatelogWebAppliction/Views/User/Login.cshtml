@model CatelogWebAppliction.Models.User


<div class="row justify-content-center">
    <div class="col-md-5">
        <div class="card">
            <div class="card-header">
                <h4> User Login Form </h4>
            </div>
            <div class="card-body">
                <form asp-action="Login" asp-controller="User" method="post">
                    <div class="row g-1">                      
                        <div class="col-md-12">
                            <div class="col-md-12">
                                <label asp-for="Email" class="form-label">Email</label>
                            </div>
                            <div class="col-md-12">
                                <input id="email" asp-for="Email" class="form-control" required type="email" />
                            </div>
                        </div>                      
                        <div class="col-md-12">
                            <div class="col-md-12">
                                <label asp-for="Password" class="form-label">Password</label>
                            </div>
                            <div class="col-md-12">
                                <input id="password" asp-for="Password" class="form-control" required type="password" />
                            </div>
                        </div>                     
                    </div>
                    <div class="mt-4">
                        <button class="btn btn-primary" type="submit">Login</button>
                        <button class="btn btn-secondary ms-2" type="reset">Clear</button>
                    </div>
                </form>

            </div>
        </div>
    </div>
</div>

