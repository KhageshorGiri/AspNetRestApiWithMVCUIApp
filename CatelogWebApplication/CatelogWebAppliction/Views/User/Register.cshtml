
@model CatelogWebAppliction.Models.User


<div class="row justify-content-center">
    <div class="col-md-5">
        <div class="card">
            <div class="card-header">
                <h4> User Registration Form </h4>
            </div>
            <div class="card-body">
                <form asp-action="Register" asp-controller="User" method="post">
                    <div class="row g-1">
                        <div class="col-md-12">
                            <div class="col-md-12">
                                <label asp-for="FirstName" class="form-label">First Name</label>
                            </div>
                            <div class="col-md-12">
                                <input id="firstName" asp-for="FirstName" class="form-control" required type="text"/>
                            </div>
                        </div>
                        <div class="col-md-12">
                            <div class="col-md-12">
                                <label asp-for="LastName" class="form-label">Last Name</label>
                            </div>
                            <div class="col-md-12">
                                <input id="lastName" asp-for="LastName" class="form-control" required type="text" />
                            </div>
                        </div>
                        <div class="col-md-12">
                            <div class="col-md-12">
                                <label asp-for="Email" class="form-label">Email</label>
                            </div>
                            <div class="col-md-12">
                                <input id="email" asp-for="Email" class="form-control" required type="email"/>
                            </div>
                        </div>
                        <div class="col-md-12">
                            <div class="col-md-12">
                                <label asp-for="UserName" class="form-label">User Name</label>
                            </div>
                            <div class="col-md-12">
                                <input id="userName" asp-for="UserName" class="form-control" required />
                            </div>
                        </div>
                        <div class="col-md-12">
                            <div class="col-md-12">
                                <label asp-for="Password" class="form-label">Password</label>
                            </div>
                            <div class="col-md-12">
                                <input id="password" asp-for="Password" class="form-control" required type="password"/>
                            </div>
                        </div>
                        <div class="col-md-12">
                            <div class="col-md-12">
                                <label asp-for="PostalCode" class="form-label">Postal Code</label>
                            </div>
                            <div class="col-md-12">
                                <input id="postalCode" asp-for="PostalCode" class="form-control" required />
                            </div>
                        </div>
                    </div>

                    <div class="mt-4">
                        <button class="btn btn-primary" type="submit">Register</button>
                        <button class="btn btn-secondary ms-2" type="reset">Clear</button>
                    </div>
                </form>



            </div>
        </div>
    </div>
</div>
